<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotel_profile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/imgView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/hotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="hehhhfhdf"
            android:textStyle="bold"
            android:layout_marginTop="210dp"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotelName"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:text="Email address: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/emailView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotelName"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Email address: "

            android:background="@drawable/text_box"
            />


        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailView"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp"
            android:text="Website:"
            android:textSize="20dp"
            />


        <TextView
            android:id="@+id/web_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailView"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="@drawable/text_box"
            />


        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/web_link"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp"
            android:textSize="20dp"
            android:text="Address:" />


        <TextView
            android:id="@+id/addressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/web_link"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="@drawable/text_box" />



        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressView"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp"
            android:textSize="20dp"
            android:text="Contact:" />


        <ListView
            android:id="@+id/contact_list"
            android:layout_width="200dp"
            android:layout_height="93dp"
            android:layout_below="@+id/addressView"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"
            android:textSize="20dp"
            android:textColor="#000000"
            />



        <Button
            android:id="@+id/EditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_list"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:text="Book a room"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />


    </RelativeLayout>


</ScrollView>
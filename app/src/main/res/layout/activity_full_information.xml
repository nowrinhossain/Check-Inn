<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkblueback"
    android:padding="10dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    tools:context=".FullInformation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="Give Full Information"
                android:textColor="#ffff"
                android:textSize="45dp"
                android:textStyle="italic" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/book_name"
                android:background="@drawable/edittextstyle"
                android:hint="Full Name"
                android:ems="10"
                android:textColor="#f9d7db"
                android:padding="10dp"
                android:maxLines="1"
                android:layout_marginTop="60dp"
                android:textColorHint="#f9d7db"
                android:inputType="text"

                />

            <EditText
                android:id="@+id/book_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:hint="Phone No"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#f9d7db"
                android:textColorHint="#f9d7db" />

            <EditText
                android:id="@+id/book_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:hint="Room_Type"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#f9d7db"
                android:textColorHint="#f9d7db" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@drawable/edittextstyle"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/book_fromDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:hint="From(Date)"
                    android:inputType="date"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="#f9d7db"
                    android:textColorHint="#f9d7db" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SET"
                    android:id="@+id/from_date"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:ems="10"
                android:maxLines="1"
                android:hint="To(Date)"
                android:layout_marginTop="7dp"
                android:background="@drawable/edittextstyle"
                android:textColorHint="#f9d7db"
                android:id="@+id/book_toDate"
                android:inputType="date"
                android:textColor="#f9d7db"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET"
                android:id="@+id/to_date"/>
        </LinearLayout>


            <Button
                android:layout_width="90dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:text="Book Now!!"
                android:clickable="true"
                android:textColor="#FFFFFF"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:textAllCaps="false"
                android:id="@+id/book_now"
                android:background="@drawable/editbutton"

                />



        </LinearLayout>

    </ScrollView>

</LinearLayout>